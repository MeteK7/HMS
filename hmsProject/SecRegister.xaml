<Window x:Class="hmsProject.SecRegister" WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hmsProject"
        mc:Ignorable="d"
        Title="SecRegister"  Height="557.348" Width="352.8">
    <Grid>
        <TextBox x:Name="txtSecName" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Margin="99,34,0,0" Text="NAME" FontSize="24" BorderBrush="#FF0D46F3" Foreground="#FFC2BABA" FontWeight="Thin" TextAlignment="Center" GotFocus="TxtSecName_GotFocus" VerticalContentAlignment="Center" FontFamily="Segoe UI Light"/>
        <TextBox x:Name="txtSecSName" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="SURNAME" VerticalAlignment="Top" Width="142" Margin="99,104,0,0" TextAlignment="Center" FontSize="24" Foreground="#FFC2BABA" BorderBrush="#FF0C46F0" GotFocus="TxtSecSName_GotFocus" VerticalContentAlignment="Center" FontFamily="Segoe UI Light"/>
        <TextBox x:Name="txtSecTC" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="T.C. NUMBER" VerticalAlignment="Top" Width="142" Margin="99,170,0,0" FontSize="24" TextAlignment="Center" Foreground="#FFC2BABA" GotFocus="TxtSecTC_GotFocus" VerticalContentAlignment="Center" FontFamily="Segoe UI Light" BorderBrush="#FF0C46F0"/>
        <TextBox x:Name="txtSecNum" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="Phone Number" VerticalAlignment="Top" Width="142" Margin="99,233,0,0" TextAlignment="Center" FontSize="20" Foreground="#FFC2BABA" GotFocus="TxtSecNum_GotFocus" VerticalContentAlignment="Center" FontFamily="Segoe UI Light" BorderBrush="#FF0C46F0"/>
        <PasswordBox x:Name="pswSec" HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="142" Margin="99,301,0,0" GotFocus="PswSec_GotFocus"/>
        <ComboBox x:Name="cboClinic" HorizontalAlignment="Left" VerticalAlignment="Top" Width="142" Margin="99,362,0,0" Height="26"/>
        <Button x:Name="btnSecReg" Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Width="93" Margin="127,404,0,0" Height="52" FontSize="24" Background="#FFEEEEEE" Foreground="#FF3C4E4C" Click="BtnSecReg_Click" FontFamily="Segoe UI Light"/>
        <TextBlock x:Name="tblSecValidity" HorizontalAlignment="Left" Margin="35,465,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="53" Width="275" FontSize="22" FontFamily="Segoe UI Light" Foreground="#FFF90F0F"/>
    </Grid>
</Window>
